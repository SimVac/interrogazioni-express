<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head', {title: "Home"}) %>
</head>

<body>
<div class="flex">
  <div class="hero min-h-screen bg-base-200 mb-16">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <% if (avviso) {%>
        <a href="/avvisi">
          <%- include('../partials/avviso', {avviso: avviso}) %>
        </a>
        <% } %>
        <h1 class="text-3xl font-bold mb-16 mx-10">Scegli la materia</h1>
        <div class="grid grid-cols-2 gap-4 place-content-center">
          <% materie.forEach(materia => { %>
          <%if (materia.attivo) {%>
            <button class="btn btn-primary m-0.5" onclick="location.href = '/materia/<%= materia.endpoint %>'"><%= materia.abbreviazione %></button>
          <% } %>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
  <%- include('../partials/navbar') %>
</div>
</body>

</html>
